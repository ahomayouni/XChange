<div class="landing-page-search">
  <div class="search-wrapper p-5">
    <div class="row">
      <div class="col-8">
        <div class="title">
            <h1>Borrow</h1>
            <h1>Anything</h1>
          </div>
      </div>
      <div class="col-4">
        <div data-aos="fade-left" data-aos-duration="2000">
          <div class="floating-img">
            <%= image_tag("balloons-home.png")%>
          </div>
        </div>   
      </div>
    </div>

    <div class="row pt-3">
      <div class="col-12 col-md-8">
        <%= form_with url: search_listings_path, local: true, method: :get, html: {class: "searchbar"} do |form| %>
            <div class="input-container">
              <%= form.text_field :listings_q, placeholder: "I need a...", data: { behaviour: "autocomplete_listings" }, class: "input-field" %>
              <i class="material-icons input-icon"> search </i>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

