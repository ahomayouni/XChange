<%= link_to(@person.description, target: "_blank") %><br/>
<small>Submitted <%= time_ago_in_words(@person.created_at) %> ago</small>

<h3>Comments</h3>

<%= form_for [@person, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.text_area :rating, placeholder: "Add rating" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @person.comments) %>
</ul>
