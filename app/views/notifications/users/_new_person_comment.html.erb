<% @actor = User.find(notification.actor_id) %>
<div class="d-flex flex-row">
    <%if @actor.person.image.attachment != nil and @actor.person.image.content_type.in?(%('image/jpeg image/png')) %>
          <%= image_tag(@actor.thumbnail, :class => "rounded-circle ml-2 mt-1", :style=> "width:50px;height:50px")%>
      <% else %>
          <%= image_tag("empty-user-icon.png", :class=> "rounded-circle ml-2 mt-1", :style=> "width:50px;height:50px")%>
     <%end%>
    <%= link_to " #{@actor.name} has recently commented on your profile.", user_path(notification.notifiable,active_tab: "dashboardTab"), id:"new_person_comment_notification",class:"dropdown-item" %>
</div>