<% @actor = User.find(notification.actor_id) %>
<div class="d-flex flex-row">
    <%if @actor.person.image.attachment != nil and @actor.person.image.content_type.in?(%('image/jpeg image/png')) %>
          <%= image_tag(@user.thumbnail, :class => "rounded-circle ml-2 mt-1", :style=> "width:50px;height:50px")%>
      <% else %>
          <%= image_tag("empty-user-icon.png", :class=> "rounded-circle ml-2 mt-1", :style=> "width:50px;height:50px")%>
     <%end%>
    <%= image_tag 'empty-user-icon.png', class:"rounded-circle ml-2 mt-1", style:'width:50px;height:50px' %>
    <%= link_to " #{@actor.name} has commented on your recent post.", listing_path(notification.notifiable), 
    class:"dropdown-item" %>
</div>