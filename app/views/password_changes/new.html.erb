<div class="setting-container">
	<%# TODO: responsive font size %>
	<div class="setting-container">
		<div class="row">
			<div class="col-4">
				<%# menu part %>
				<div class="setting-menu" id="setting-menu">
					<%= render 'shared/setting_menu' %>
				</div>
			</div>
			<div class="col-8">
				<%# editting part %>
				<div class="setting-item">
					<% provide(:title, "Change your password") %>
					<div class="row ml-1">
						<div class="offset-md-5">
							<h5> Modify Password </h5>
						</div>
					</div>
					<div class="row ml-1">
						<%= render 'shared/error_messages' %>
					</div>
					<div class="row ml-1">
						<div class="col-md-6 col-xs-12 offset-md-3">
							<%= form_for(:password_changes, url: user_password_changes_path) do |f| %>
								<%= f.label :new_password %>
								<%= f.password_field :password,:required => 'required',class:'form-control' , id: 'input_password'%>
								View password <input type="checkbox" onclick="show_password()">
								<span class="glyphicon glyphicon-eye-open"> </span>
								<br>
								<%= f.label :new_password_confirmation %>
								<%= f.password_field :password_confirmation, :required => 'required' ,class:'form-control'%>
								<%=f.submit "Submit", class: 'btn btn-primary' %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
