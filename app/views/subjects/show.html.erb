<%= link_to(@subject.descrip, target: "_blank") %><br/>
<small>Submitted <%= time_ago_in_words(@subject.created_at) %> ago</small>

<h3>Comments</h3>

<%= form_for [@subject, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @subject.comments) %>
</ul>
