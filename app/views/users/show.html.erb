<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <%= image_tag("empty-user-icon.png", :class => "rounded mx-5 my-4") %>
        </div>
        <div class="col-md-9 py-3 px-3">
            <h1>  <%=@user.name%>'s Dashboard </h1>
            <div class="row">
                <div class="col-md-3">
                    <% if @user.listings.count > 0%>
                        <p> Listings by Category: </p>
                        <%= pie_chart @user.listings.group(:category).count, colors: ['#ebceff', '#ffb2d7'],class:'w-25'%>
                    <% end  %>
                </div>
            </div>
       </div>
    </div>
 	<div class="row">
        <div class="col-md-6 mx-4">
            <div class="d-flex flex-row mt-3 py-3">
                <h2> <%=@user.name%>'s listings </h2>
                <%= link_to "Create new listing", new_listing_path, class:'btn btn-outline-info h-25 ml-4 mt-2' %>
            </div>
        </div>
    </div>
    <div class="row">
        <% if @user.listings.count > 0%>
        <%= render @user.listings %>
        <% else %>
            <div class="col-md-12">
                <div class="card d-flex p-5 mb-5">
                    <div class="card-text p-5 d-flex justify-content-center align-items-center text-secondary">
                     You don't have any listings yet. Create one by clicking on the button above!
                    </div>
                </div>
            </div>
        <%end%>
    </div>

    <!-- Start of My Request -->
    <div class="row">
          <div class="col-md-6 mx-4">
              <div class="d-flex flex-row mt-3 py-3">
                  <h2> My Requests </h2>
              </div>
          </div>
      </div>
    <div class="row">
        <% if @user.borrow_requests.count > 0%>
             <%= render @user.borrow_requests %>
        <% else %>
            <div class="col-md-12">
                <div class="card d-flex p-5 mb-5">
                    <div class="card-text p-5 d-flex justify-content-center align-items-center text-secondary">
                      You haven't requested to borrow anything yet. Browse lisitings to find what you need!
                    </div>
                </div>
            </div>
        <%end%>
    </div>
   <!-- End of My Request -->

   <!-- Start of Awating approvals -->
    <div class="row">
          <div class="col-md-6 mx-4">
              <div class="d-flex flex-row mt-3 py-3">
                  <h2> Awaiting Approvals </h2>
              </div>
          </div>
    </div>
    <div class="row">
        <% @count = 0 %>
        <% @user.listings.each do |u| %>
        <% @count += u.borrow_requests.where(status: "requested").count %>
        <% end %>
        <% if @count > 0%>
             <% @user.listings.each do |listing| %>
              <% listing.borrow_requests.each do |borrow_request| %>
                <% if borrow_request.status == "requested"%>
                  <h4> Borrower's Name: </h4>
                  <%= User.find_by(id: borrow_request.user_id).name %>
                  <h4> Listing name: </h4>
                  <%= listing.title %>
                  <%= link_to "Approve", borrow_approve_path(borrow_request.id), method: :put, class: 'btn btn-outline-info mt-2'%>
                  <%= link_to "Decline", borrow_decline_path(borrow_request.id), method: :put,class: 'btn btn-outline-info mt-2'%>
                <% end %>
              <% end %>
             <% end %>
        <% else %>
            <div class="col-md-12">
                <div class="card d-flex p-5 mb-5">
                    <div class="card-text p-5 d-flex justify-content-center align-items-center text-secondary">
                      You don't have any awating approvals
                    </div>
                </div>
            </div>
        <%end%>
    </div>
    <!-- end of awaiting approvals -->

    <!-- Start of Approved Request -->
    <div class="row">
          <div class="col-md-6 mx-4">
              <div class="d-flex flex-row mt-3 py-3">
                  <h2> Approved Requests </h2>
              </div>
          </div>
    </div>
    <div class="row">
        <% @count = 0 %>
        <% @user.listings.each do |u| %>
        <% @count += u.borrow_requests.where(status: "approved").count %>
        <% end %>
        <% if @count > 0%>
             <% @user.listings.each do |listing| %>
              <% listing.borrow_requests.each do |borrow_request| %>
                <% if borrow_request.status == "approved"%>
                  <h4> Borrower's Name: </h4>
                  <%= User.find_by(id: borrow_request.user_id).name %>
                  <h4> Listing name: </h4>
                  <%= listing.title %>
                <% end %>
              <% end %>
             <% end %>
        <% else %>
            <div class="col-md-12">
                <div class="card d-flex p-5 mb-5">
                    <div class="card-text p-5 d-flex justify-content-center align-items-center text-secondary">
                      You don't have approved requests
                    </div>
                </div>
            </div>
        <%end%>
    </div>
    <!-- End of Approved Request -->

</div>
