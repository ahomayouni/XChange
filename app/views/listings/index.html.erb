<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 float-right">
            <%= form_with url: search_listings_path, local: true, method: :get, html: {class: "form-inline float-right"} do |form| %>
                <%= form.text_field :listings_q, placeholder: "Search for a listing..", data: { behaviour: "autocomplete_listings" }, class: "form-control mt-3 mx-2" %>
                <%= form.button "Search", class: "btn btn-outline-success mt-3 mx-3" %>
            <% end %>	
        </div>
    </div>
    <div class="row d-flex flex-row">
        <div class="col-md-3">
            <h1>All Listings</h1>
        </div>
        <div class="col-md-9">
             <%= link_to "Create new listing", new_listing_path, class: "btn btn-outline-info mt-2" %>
        </div>
    </div>
    <div class="row">
        <% @listings.each do |listing|%>
            <div class="col-md-9">
                <div class="card d-flex flex-row mb-2">
                    <div class="card-body">
                        <h5 class="card-title text-bold">
                            <%= listing.title %>
                        </h5>
                            <p> 
                            <%= listing.description %>
                            </p>
                        <%= link_to 'Edit', edit_listing_path(listing), class:'card-link' %>
                        <%= link_to 'Show', listing_path(listing), class:'card-link' %>
                        <%= link_to 'Delete', listing_path(listing), method: :delete, data: {confirm: "Are you sure?"}, class:'card-link' %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div >