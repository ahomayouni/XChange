<div class="container-fluid">
	<div class="row ml-1" style="margin-top:5%;">
	<h1 class="offset-md-5"> User Settings </h1>
	</div>

	<div class="row ml-1">
		<div class="col-xs-6 col-md-12 offset-md-5">
			<%= link_to 'Update Your Basic Information', edit_user_path(@user) ,class:'settings_selector'%> <br>
			<%= link_to 'Change Password', new_user_password_change_path(@user)%> <br>
			<%= link_to 'Deactivate Account' , user_setting_path(@user.id,0),method: :delete, data: {confirm: "We are sad to see you leave :( Are you sure you want to delete your account? This will delete all of your information from our database. ) "  }%>
		</div>
	</div>
</div>